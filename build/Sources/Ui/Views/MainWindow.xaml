<Window x:Class="ewoxej_gitsame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ewoxej_gitsame"
        mc:Ignorable="d"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="600" Width="1080" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Resources>
        <DataTemplate x:Key="sourceDatabaseTemplate">
            <Grid Height="70" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="400"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon VerticalAlignment="Center" Name="TypeIcon" Width="50" Height="50" Kind="Github" Grid.Column="0"/>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding Path=Name}" FontSize="18" Style="{StaticResource MaterialDesignHeadline5TextBlock}"></TextBlock>
                    <TextBlock Grid.Row="1" Text="{Binding Path=Path}" FontSize="12" Foreground="Gray"></TextBlock>
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Branch}" FontSize="12"></TextBlock>
                        <TextBlock Text=" - " FontSize="12"></TextBlock>
                        <TextBlock Text="{Binding Path=LastCommitHash}" FontSize="12"></TextBlock>
                    </StackPanel>
                </Grid>
                <CheckBox Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Width="30" Height="30"></CheckBox>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Type}" Value="2">
                    <Setter TargetName="TypeIcon" Property="Kind" Value="Folder" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid Height="60" VerticalAlignment="Top" Background="{StaticResource PrimaryHueMidBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Rectangle Width="1000" Grid.Column="0" Fill="{StaticResource PrimaryHueMidBrush}" MouseDown="TextBlock_MouseDown"></Rectangle>
            <TextBlock Grid.Column="0" MouseDown="TextBlock_MouseDown" Text="GitSame" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Champagne &amp; Limousines" />
            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}"
                    Click="Minimize_Click">
                <materialDesign:PackIcon Kind="WindowMinimize"/>
            </Button>
            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}"
                    Click="Close_Click">
                <materialDesign:PackIcon Kind="WindowClose"/>
            </Button>
        </Grid>
        <Grid Margin="0 60 0 0">
            <dragablz:TabablzControl>
                <dragablz:TabablzControl.InterTabController>
                    <dragablz:InterTabController/>
                </dragablz:TabablzControl.InterTabController>
                <TabItem Header="Главная">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Margin="10 10 10 10" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <local:SourceView Title="Источник 1" EnableDbButton="False" Margin="10 10 10 10" Grid.Column="0"/>
                            <local:SourceView Title="Источник 2" EnableDbButton="True" Margin="10 10 10 10" Grid.Column="1"/>
                        </Grid>
                        <Grid Margin="10 10 10 10" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" Content="Сравнить каждый с каждым"/>
                            <Button Grid.Column="1" Content="Запуск"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Управление БД">
                    <Grid Margin="10 10 10 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    <dragablz:TabablzControl Grid.Column="0" TabStripPlacement="Left" Foreground="{StaticResource MaterialDesignBackground}">
                        <TabItem>
                            <TabItem.Header>
                                <materialDesign:PackIcon Kind="Collection"/>
                            </TabItem.Header>
                                <ListView Name="lvSources" ItemTemplate="{StaticResource sourceDatabaseTemplate}">
                                </ListView>
                        </TabItem>
                        <TabItem>
                            <TabItem.Header>
                                <materialDesign:PackIcon Kind="File"/>
                            </TabItem.Header>
                                <ListView Name="lvFiles">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Source}" Width="150">Источник</GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Path}" Width="150">Путь</GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=IsChecked}" Width="150">Отметка</GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=CreationDate}" Width="200">Дата создания</GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </TabItem>
                    </dragablz:TabablzControl>
                        <StackPanel Grid.Column="1">
                            <Button>Remove</Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Параметры">
                    <StackPanel Orientation="Vertical" Margin="10" Width="400" HorizontalAlignment="Left">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                        <TextBlock Text="Фильтры" Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                   Grid.Column="0"></TextBlock>
                            <Button Grid.Column="1" Margin="4">
                                <materialDesign:PackIcon Kind="Edit"/>
                            </Button>
                            <Button Grid.Column="2">
                                <materialDesign:PackIcon Kind="Minus"/>
                            </Button>
                            <Button Grid.Column="3" Margin="4">
                                <materialDesign:PackIcon Kind="Plus"/>
                            </Button>
                        </Grid>
                        <Border BorderThickness="1" BorderBrush="{StaticResource PrimaryHueMidBrush}">
                            <ListBox Height="150"></ListBox>
                        </Border>
                        <CheckBox Margin="5">Разрешить регулярные выражения</CheckBox>
                        <TextBlock Text="Анализ" Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                   ></TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>Быстро</TextBlock>
                            <Slider Margin="5" Value="2" Minimum="1" Maximum="3" Width="100"
                                        IsSnapToTickEnabled="True"
                                        Ticks="1 2 3"
                                    TickPlacement="BottomRight"
                                        TickFrequency="1"/>
                            <TextBlock>Точно</TextBlock>
                        </StackPanel>
                        <CheckBox Margin="5">Искать автоплагиат</CheckBox>
                        <TextBlock Text="Управление БД" Style="{StaticResource MaterialDesignHeadline4TextBlock}">
                        </TextBlock>
                        <Button Margin="5">Очистить БД</Button>
                    </StackPanel>
                </TabItem>
            </dragablz:TabablzControl>
        </Grid>
    </Grid>
</Window>