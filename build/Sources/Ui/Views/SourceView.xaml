<UserControl x:Class="ewoxej_gitsame.SourceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ewoxej_gitsame" d:DataContext="{d:DesignInstance Type=local:Source}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400" >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="booleanVisibleConverter" />
    </UserControl.Resources>
    <Border BorderBrush= "{StaticResource PrimaryHueDarkBrush}" BorderThickness="1">
        <Grid Margin="10 10 10 10" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Name="lTitle" Grid.Column="0" HorizontalAlignment="Left" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               VerticalAlignment="Center">Источник Х</TextBlock>
                    <Button Name="deleteBtn" Margin="10 5 5 5" Grid.Column="3" Click="DeleteAll_Clicked">
                        <materialDesign:PackIcon Kind="ClearCircle"/>
                    </Button>
                    <Button Name="addBtn" Margin="5 5 5 5" Grid.Column="2" Click="AddItem_Clicked">
                        <materialDesign:PackIcon Kind="Add"/>
                    </Button>
                    <Button Name="bDatabase" Margin="5 5 10 5" Grid.Column="1" Click="UseDb_Clicked">
                        <materialDesign:PackIcon Kind="Database"/>
                    </Button>
                </Grid>
                <ListBox Name="lbSource" Grid.Row="1" ItemsSource="{Binding Path=SourcesList}"
                         HorizontalContentAlignment="Stretch"
                         SelectedItem="{Binding Path=CurrentItem}" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Width="20" Height="20" Grid.Column="0" Kind="{Binding Path=IconKind}"/>
                                <TextBlock Grid.Column="1" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Stretch"
                                           Text="{Binding Path=FriendlyName}"/>
                                <Button Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, 
                                        Path=IsSelected, Converter={StaticResource booleanVisibleConverter}}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="DeleteItem_Clicked">
                                    <materialDesign:PackIcon Width="20" Height="20" Kind="Close"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid Name="gridLocalDb" Grid.Row="1" Background="{StaticResource PrimaryHueMidBrush}"
                      Visibility="Hidden">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <materialDesign:PackIcon Grid.Row="0"
                                             Kind="DatabaseLockOutline"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                             Width="80" Height="80"></materialDesign:PackIcon>
                        <TextBlock Grid.Row="1"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignHeadline2TextBlock}"
                               TextWrapping="WrapWithOverflow">
                            Используется локальная БД</TextBlock>
                </Grid>
                <CheckBox Name="cbAddToDb"
                          Margin="10 10 10 10" 
                          Grid.Row="2"
                          Content="Добавить в локальную БД" IsChecked="{Binding Path=AddToDb, Mode=TwoWay}"></CheckBox>
            </Grid>
        </Grid>
    </Border>
</UserControl>
